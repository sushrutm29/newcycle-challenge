            <label for="item-input">Item</label>
            <input type="text" name="itemName" class="form-control" id="item-input" placeholder="Enter item name">
        </div>
        <div class="form-group">
            <label for="owner-input">Owner</label>
            <input type="text" name="ownerName" class="form-control" id="owner-input" placeholder="Enter owner name">
